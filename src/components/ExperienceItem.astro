---
import Badge from "./ui/Badge.astro";
import LinkInline from "./ui/LinkInline.astro";

interface Props {
    date: string;
    title: string;
    company: string;
    description: string;
    link?: string;
    actual: boolean;
}

const {date, title, company, description, link, actual} = Astro.props;
---

<div class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"></div>
<header class="flex flex-col gap-2 items-start mb-4">
    <div class="flex flex-col items-start sm:flex-row sm:items-center gap-2 sm:gap-4">
        <h3 class="text-lg font-semibold text-primary-color gap-4">{title}</h3>
        {
            actual && (
                <Badge color="yellow">Actualmente</Badge>
            )
        }
    </div>
    <h4 class="text-base font-medium text-gray-200">{company}</h4>
</header>
<time class="block text-sm md:text-base lg:text-lg leading-none text-gray-300 mb-2">{date}</time>
<p class="mb-4 text-xs md:text-sm lg:text-base text-gray-400 text-pretty">{description}</p>
{
    link && (
        <LinkInline href={link}>
            Saber m√°s{" "}
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                />
            </svg>
        </LinkInline>
    )
}
