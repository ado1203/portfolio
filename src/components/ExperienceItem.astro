---
import Badge from "./ui/Badge.astro";
interface Props {
    date: string;
    title: string;
    description: string;
    actual: boolean;
}
const {date, title, description, actual} = Astro.props;
---

<div class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"></div>
<header class="flex flex-col gap-2 items-start sm:flex-row sm:items-center sm:gap-4 mb-4">
    <h3 class="text-lg font-semibold text-[#8BD49C] gap-4">
        {title}
    </h3>
    {
        actual &&
            <Badge color="yellow">Actualmente</Badge>
    }
</header>
<time class="block text-sm md:text-base lg:text-lg leading-none text-gray-500">
    {date}
</time>
<p class="mb-4 text-xs md:text-sm lg:text-base text-gray-400 text-pretty">{description}</p>
