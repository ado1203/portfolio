---
import Badge from "./ui/Badge.astro";
import DownloadIcon from "./icons/Download.astro";
import GitHubIcon from "./icons/GitHub.astro";
import LinkedInIcon from "./icons/LinkedIn.astro";
import SocialPill from "./ui/SocialPill.astro";
import LinkButton from "./ui/LinkButton.astro";
---

<img
        class="size-44 sm:mr-3 rounded-full shadow-2xl ring-8 ring-white dark:ring-gray-900/70 bg-indigo-100 dark:bg-gray-700/60"
        src="/adonay.webp"
        alt="Adonay"
/>
<article class="flex flex-col items-center sm:items-start gap-3">
    <div class="flex flex-col gap-2">
        <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-4">
            <h1 class="text-4xl text-center sm:text-left font-bold text-slate-600 dark:text-slate-100 flex flex-row gap-x-4">
                Adonay Gutiérrez
            </h1>
            <a
                href="https://www.linkedin.com/in/adonay-guti%C3%A9rrez-77a7a91b2/"
                target="_blank"
                rel="noopener"
                class="flex justify-center items-center"
            >
                <Badge color="green" class="hover:scale-105 transition ease-in">Buscando trabajo</Badge>
            </a>
        </div>
        <p class="text-slate-700 dark:text-slate-300 text-base text-center sm:text-start max-w-xl rounded-2xl text-pretty">
            <span class="text-green-600 font-medium dark:text-primary-color dark:font-normal">Desarrollador Web</span> apasionado.
            <span class="text-sky-500 font-medium dark:text-[#70E1E8] dark:font-normal">De San Salvador, El Salvador. </span>
            Especializado en crear aplicaciones únicas.
        </p>
    </div>
    <nav class="flex gap-3 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/adonay-guti%C3%A9rrez-77a7a91b2/">
            <LinkedInIcon class="size-4"/>
            LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/adogrz">
            <GitHubIcon class="size-5"/>
            GitHub
        </SocialPill>
        <LinkButton href="/assets/CV-Gutierrez-Adonay.pdf" download="CV-Gutierrez-Adonay">
            <DownloadIcon class="size-5"/>
            Descargar CV
        </LinkButton>
    </nav>
</article>